//the spider boss
ACTOR InfernalSpider
{
	//$Category "ZPack Monsters"
	Radius 72
	Height 120
	Health 12000
	Speed 30
	Mass 99999
	MeleeRange 76
	MeleeDamage 12
	PainChance 3
	Translation "152:159=216:223,9:9=223:223,76:70=216:223,129:132=216:223"
	Scale 2.0
	SeeSound "spider2/sight"
	DeathSound "spider2/death"
	PainSound "spider2/pain"
	ActiveSound "spider2/active"
	Monster
	+BOSS
	+NORADIUSDMG
	+MISSILEMORE
	+MISSILEEVENMORE
	+DONTHURTSPECIES
	+NOTARGET
	+FLOORCLIP
	Obituary "$OB_INFSP"
	HitObituary "$HB_INFSP"
	States
	{
	Spawn:
		SPI2 A 1 A_Look
		Loop
	See:
		TNT1 A 0 A_Jumpifcloser(1024,9)
		SPI2 E 12 A_FaceTarget
		MNTR E 0 A_PlaySound ("spider/step")
		MNTR E 0 A_SetInvulnerable
		MNTR E 0 A_SkullAttack
		SPI2 U 5 ThrustThingZ (0, 82, 0, 1)
		SPI2 U 38 A_JumpIf (z-floorz<24,1)
		MNTR A 0
		MNTR A 0 A_PlaySound ("spider/land")
		MNTR A 0 A_UnSetInvulnerable
		SPI2 A 1 A_Stop
		SPI2 ABCD 2 A_Chase
		MNTR A 0 A_PlaySound ("spider/step")
		SPI2 ABCD 2 A_Chase
		MNTR A 0 A_PlaySound ("spider/step")
		SPI2 ABCD 2 A_Chase
		MNTR A 0 A_PlaySound ("spider/step")
		SPI2 ABCD 2 A_Chase
		MNTR A 0 A_PlaySound ("spider/step")
		SPI2 ABCD 2 A_Chase
		MNTR A 0 A_PlaySound ("spider/step")
		SPI2 ABCD 2 A_Chase
		MNTR A 0 A_PlaySound ("spider/step")
		Loop
	Melee:
		MNTR E 0 A_FaceTarget
		MNTR E 0 A_XScream
		SPI2 E 5 A_Meleeattack
		SPI2 A 13 A_FaceTarget
		Goto See
	Missile:
		MNTR V 0 A_Jump (82,15)
		MNTR V 0 A_Jump (32,8)
		SPI2 U 5 A_FaceTarget
		SPI2 X 2 A_CustomMissile("flameshot", 24, 0, -8, 0)
		SPI2 X 2 A_CustomMissile("flameshot", 24, 0, 0, 0)
		SPI2 X 2 A_CustomMissile("flameshot", 24, 0, 8, 0)
		SPI2 X 3 A_FaceTarget
		SPI2 U 5
		Goto See
		SPI2 E 5 A_FaceTarget
		SPI2 E 6 A_ThrowGrenade("minispider", 85, 10, 20)
		SPI2 E 6 A_ThrowGrenade("minispider", 85, 10, 20)
		SPI2 E 6 A_ThrowGrenade("minispider", 85, 10, 20)
		SPI2 E 5
		Goto See
		SPI2 E 5 A_FaceTarget
		SPI2 U 5 A_PlaySound("spider2/sight")
		MNTR W 0 A_FaceTarget
		SPI2 X 5 A_CustomMissile("Hellripper", 128, 0, 0, 0)
		SPI2 X 17 A_FaceTarget
		SPI2 X 2 A_CustomMissile("flameshot", 24, 0, -8, 0)
		SPI2 X 2 A_CustomMissile("flameshot", 24, 0, 0, 0)
		SPI2 X 2 A_CustomMissile("flameshot", 24, 0, 8, 0)
		SPI2 U 5 A_FaceTarget
		Goto See
	Pain:
		SPI2 E 2 A_Pain
		MNTR E 0 A_FaceTarget
		SPI2 E 6 A_ThrowGrenade("minispider", 85, 10, 20)
		SPI2 E 6 A_ThrowGrenade("minispider", 85, 10, 20)
		SPI2 E 6 A_ThrowGrenade("minispider", 85, 10, 20)
		Goto See
	Death:
		MNTR A 0 A_Scream
		MNTR A 0 A_SetFloorClip
		MNTR A 0 A_Burst("ArchvileFire2")
		Stop
	}
}

