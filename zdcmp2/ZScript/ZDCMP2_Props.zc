Class LightRay_Regular : SwitchableDecoration
{
	Default
	{
		DistanceCheck "ZDCMP2lod";
		Radius 8;
		Height 1;
		RenderStyle "Translucent";
		Alpha 1.0;
		+NOBLOCKMAP
		+NOGRAVITY
	}
	States
	{
	Spawn:
	Active:
		VOLT A -1 Bright;
		Stop;
	Inactive:
		VOLT A 1;
		TNT1 A -1;
		Stop;
	}
}

Class LightRay_Wallsprite : LightRay_Regular
{
	Default
	{
		DistanceCheck "ZDCMP2lod";
		+ROLLSPRITE
		+WALLSPRITE
	}
}

