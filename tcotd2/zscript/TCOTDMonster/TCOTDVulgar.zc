		FVUL AB 3 BRIGHT LIGHT("VulgarShot");
		Loop;
	Death:
		FVUL C 4 BRIGHT LIGHT("VulgarShotX_1");
		FVUL D 4 BRIGHT LIGHT("VulgarShotX_2");
		FVUL E 4 BRIGHT LIGHT("VulgarShotX_3");
		FVUL F 4 BRIGHT LIGHT("VulgarShotX_4");
		Stop;
	}
}